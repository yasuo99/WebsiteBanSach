@model BookStore.Models.Order
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<h4 class="text-success">Thông tin đơn hàng</h4>
<div style="height: 200px;background-color:aliceblue" class="container border">
    <div class="col-12">
        <div class="row" style="padding-top:10px">
            <div class="col-2">
                Tên người nhận
            </div>
            <div class="col-3">
                <input asp-for="@Model.Name" readonly class="form-control" />
            </div>
            <div class="col-2">
                Sđt người nhận
            </div>
            <div class="col-3">
                <input asp-for="@Model.PhoneNumber" readonly class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="row" style="padding-top:10px">
            <div class="col-2">
                Địa chỉ giao hàng
            </div>
            <div class="col-3">
                <input asp-for="@Model.Address" readonly class="form-control" />
            </div>
            <div class="col-2">
                Ngày đặt hàng
            </div>
            <div class="col-3">
                <input asp-for="@Model.Date" readonly class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="row" style="padding-top:10px">
            <div class="col-2">
               Giảm giá:
            </div>
            <div class="col-3">
                <input asp-for="@Model.Discount.Value" readonly class="form-control" />
            </div>
        </div>
    </div>
</div>
