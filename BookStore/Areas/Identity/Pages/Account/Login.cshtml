@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br />
<br />
<div class="row">
    <div class="col-md-3 offset-md-4" style="background-color:white">
        <section>
            <form id="account" method="post">
                <h4>Đăng nhập</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Mật khẩu</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>
                <div class="form-group">
                    <p>
                        Quên mật khẩu nhấn vào <a id="forgot-password" asp-page="./ForgotPassword">đây</a>
                    </p>
                    <p>
                        Bạn chưa có tài khoản? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng kí</a>
                    </p>
                </div>
            </form>
        </section>
    </div>   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
