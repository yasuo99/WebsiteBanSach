@page
@model RegisterModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Register";
}

<br />
<br />
<div class="row">
    <div class="col-md-3 offset-md-4" style="background-color:white">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Đăng kí tài khoản</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Họ và tên</label>
                <input asp-for="Input.Name" class="form-control" placeholder="Nhập họ tên"/>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Nhập email"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>SĐT</label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input asp-for="Input.Address" class="form-control" placeholder="Nhập địa chỉ" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Mật khẩu</label>
                <input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu từ 6 đến 100 kí tự"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu đã nhập"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Super Admin"))
            {
                <div class="form-group">
                    <label asp-for="Input.IsSuperAdmin"></label>
                    <input asp-for="Input.IsSuperAdmin" type="checkbox" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.IsManager"></label>
                    <input asp-for="Input.IsManager" type="checkbox" class="form-control" />
                </div>
            }
            <button style="margin-left: 90px;background-color:#fdd835;" type="submit" class="btn">Tạo tài khoản</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
