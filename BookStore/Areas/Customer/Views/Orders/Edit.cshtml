@model BookStore.Models.ViewModel.CustomerOrderViewModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <br />
    <br />
    <h4>Order</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <h4>Thông tin người nhận</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Order.ID" />
                <input type="hidden" asp-for="@Model.Order.ApplicationUserID" />
                <input type="hidden" asp-for="@Model.Order.State" />
                <input type="hidden" asp-for="@Model.Order.Date" />
                <div class="form-group">
                    <label asp-for="@Model.Order.Name" class="control-label"></label>
                    <input asp-for="@Model.Order.Name" class="form-control" />
                    <span asp-validation-for="@Model.Order.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Order.PhoneNumber" class="control-label"></label>
                    <input asp-for="@Model.Order.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.Order.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Order.Address" class="control-label"></label>
                    <input asp-for="@Model.Order.Address" class="form-control" />
                    <span asp-validation-for="@Model.Order.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Order.DiscountID" class="control-label"></label>
                    <select asp-for="@Model.Order.DiscountID" class="form-control" asp-items="ViewBag.DiscountID"></select>
                    <span asp-validation-for="@Model.Order.DiscountID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Order.Total" class="control-label"></label>
                    <input asp-for="@Model.Order.Total" class="form-control" readonly/>
                    <span asp-validation-for="@Model.Order.Total" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Xác nhận" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-8">
            @* Partial View *@
            <partial name="~/Views/Shared/_OrderDetailBooks.cshtml" model="@Model" />
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
