@model IEnumerable<BookStore.Models.Banner>

@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Admin Users List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-area="Admin" asp-action="Create" asp-controller="Banners" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Thêm banner</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img style="width: 1140px" src="@item.Image" />
                    </td>
                    <td>
                        <div class="btn-group">
                            <a type="button" class="btn btn-primary" asp-action="Edit" asp-controller="Books" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a>
                            <a type="button" class="btn btn-success" asp-action="Details" asp-controller="Books" asp-route-id="@item.ID"><i class="far fa-list-alt"></i></a>
                            <a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Books" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
