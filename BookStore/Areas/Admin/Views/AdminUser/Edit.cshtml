@model BookStore.Models.ViewModel.ApplicationUserViewModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<br />
<h4 class="text-info">Thay đổi thông tin tài khoản</h4>

<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="ApplicationUser.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ApplicationUser.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ApplicationUser.Name" class="form-control" />
            </div>
            <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ApplicationUser.Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="ApplicationUser.Email" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ApplicationUser.PhoneNumber"></label>
            </div>
            <div class="col-5">
                <input asp-for="ApplicationUser.PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ApplicationUser.Address"></label>
            </div>
            <div class="col-5">
                <input asp-for="ApplicationUser.Address" class="form-control" />
            </div>
            <span asp-validation-for="ApplicationUser.Address" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2"><label>Quyền trên database</label></div>
            <div class="col-2"><label>Insert và Update</label><input asp-for="ApplicationUser.UpdateAndInsertRoleOn" type="checkbox" class="form-control" /></div>
            <div class="col-2"><label>Delete</label><input asp-for="ApplicationUser.DeleteRoleOn" type="checkbox" class="form-control" /></div>

        </div>
            <div class="col-2"><label>Danh sách các bảng</label></div>
            @for (int i = 0; i < 10; i++)
            {
                <div class="form-group row">
                    <div class="col-2"><label>@Model.RoleOnDatabaseViewModels[i].TableName</label></div>
                    <input type="hidden" asp-for="@Model.RoleOnDatabaseViewModels[i].TableName" />
                    <div class="col-5"><input asp-for="@Model.RoleOnDatabaseViewModels[i].IsSelected" type="checkbox" class="form-control" /></div>
                </div>
            }
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.ApplicationUser.Id" value="Cập nhật" />
        </div>
    </div>

</form>
<div>
    <a asp-action="Index" class="btn btn-success">Quay lại</a>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

