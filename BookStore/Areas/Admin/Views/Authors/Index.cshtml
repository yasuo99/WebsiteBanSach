@*@model IEnumerable<BookStore.Models.Author>*@
@model BookStore.Models.ViewModel.AuthorsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Danh sách tác giả</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-area="Admin" asp-action="Create" asp-controller="Authors" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Thêm tác giả</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.SecondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.CompanyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Authors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondName)
                </td>
                <td>
                    <img style="width:180px;height:180px" src="@item.Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    <div class="btn-group">
                        <a type="button" class="btn btn-primary" asp-action="Edit" asp-controller="Books" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a>
                        <a type="button" class="btn btn-success" asp-action="Details" asp-controller="Books" asp-route-id="@item.ID"><i class="far fa-list-alt"></i></a>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Books" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn border" page-class-normal="btn btn-default active"
     page-class-selected="btn btn-primary active" class="btn-group m-1"></div>