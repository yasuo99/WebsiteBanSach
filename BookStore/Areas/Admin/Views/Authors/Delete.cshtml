@model BookStore.Models.ViewModel.AuthorsViewModel

@{
    ViewData["Title"] = "Delete";
}


<br />
<br />
<h3>Bạn có chắc chắn xóa?</h3>
@if (Model.PermissionError != null)
{
    <div style="color:red">Bạn không có quyền này vui lòng liên hệ quản lí.</div>
    <div>
        <a asp-action="Index">Quay lại</a>
    </div>
}
else
{
    <form method="post" asp-action="Delete">
        <div class="p-4 border rounded row">
            <input hidden asp-for="Author.ID" />
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Author.FirstName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Author.FirstName" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Author.SecondName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Author.SecondName" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Author.CompanyName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Author.CompanyName" readonly class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-1">

            </div>
            <div class="col-3">
                <img src="@Model.Author.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Xóa" />
                <a asp-action="Index" class="btn btn-success">Quay lại</a>
            </div>
        </div>
    </form>
}
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
