<div>Lựa chọn các path disallow</div>
<form method="post" asp-action="CreateRobot" class="form-group">
    @for (int i = 0; i <Model.Count;i++)
    {      
        <label>@Model[i].Path</label>
        <input hidden asp-for="@Model[i].Path" />
        <input type="checkbox" asp-for="@Model[i].Selected"/>
        <br />
    }
    <button type="submit" class="btn btn-primary">Xác nhận</button>
</form>
