@model BookStore.Models.ViewModel.BooksViewModel

@{
    ViewData["Title"] = "Edit";
}

<br />
<br />
<h3>Chỉnh sửa thông tin sách</h3>
@if (Model.PermissionError != null)
{
    <div>Bạn không có quyền này vui lòng liên hệ quản lí.</div>
    <div>
        <a asp-action="Index">Quay lại</a>
    </div>
}
else
{
    if (Model.TriggerError != null)
    {
        <div>Tên sách không được trùng</div>
        <div>
            <a asp-action="Index">Quay lại</a>
        </div>
    }
    <h4>Book</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Book.ID" />
                <div class="form-group">
                    <label asp-for="Book.BookName" class="control-label"></label>
                    <input asp-for="Book.BookName" class="form-control" />
                    <span asp-validation-for="Book.BookName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="col-2">
                        <label asp-for="Book.Image"></label>
                    </div>
                    <div class="col-5">
                        <input type="file" name="files" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Book.BookDetail" class="control-label"></label>
                    <input asp-for="Book.BookDetail" class="form-control" />
                    <span asp-validation-for="Book.BookDetail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.ReleaseDate" class="control-label"></label>
                    <input asp-for="Book.ReleaseDate" class="form-control" />
                    <span asp-validation-for="Book.ReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.AuthorID" class="control-label"></label>
                    <select asp-for="Book.AuthorID" class="form-control" asp-items="ViewBag.AuthorID"></select>
                    <span asp-validation-for="Book.AuthorID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.PublisherID" class="control-label"></label>
                    <select asp-for="Book.PublisherID" class="form-control" asp-items="ViewBag.PublisherID"></select>
                    <span asp-validation-for="Book.PublisherID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.BookPrice" class="control-label"></label>
                    <input asp-for="Book.BookPrice" class="form-control" />
                    <span asp-validation-for="Book.BookPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.SpecialTagID" class="control-label"></label>
                    <select asp-for="Book.SpecialTagID" class="form-control" asp-items="ViewBag.SpecialTagID"></select>
                    <span asp-validation-for="Book.SpecialTagID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.Available" class="control-label"></label>
                    <input asp-for="Book.Available" class="form-control" />
                    <span asp-validation-for="Book.Available" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.Sold" class="control-label"></label>
                    <input asp-for="Book.Sold" class="form-control" />
                    <span asp-validation-for="Book.Sold" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.Alias" class="control-label"></label>
                    <input asp-for="Book.Alias" class="form-control" />
                    <span asp-validation-for="Book.Alias" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a type="button" class="btn btn-success" asp-action="Index">Back to List</a>
    </div>
}
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


