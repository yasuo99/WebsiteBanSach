@model BookStore.Models.ViewModel.BooksViewModel

@{
    ViewData["Title"] = "Delete";
}

<br />
<br />
<h3>Bạn có chắc chắn xóa?</h3>
@if (Model.PermissionError != null)
{
    <div style="color:red">Bạn không có quyền này vui lòng liên hệ quản lí.</div>
    <div>
        <a asp-action="Index">Quay lại</a>
    </div>
}
else
{
<div>
    <br />
    <h4>Sách</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.BookName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.BookName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.BookDetail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.BookDetail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Publisher.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.BookPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.BookPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.SpecialTag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.SpecialTag.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Available)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Available)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Sold)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Sold)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Book.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
}
